{
	"name": "DribbbleHD",
	"description": "Display full images while browsing Dribbble shots.",
	"version": "1.4.2",
	"manifest_version": 2,
	"icons": {
		"16": "img/icon_16.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png"
	},
	"permissions": [
		"*://dribbble.com/"
	],
	"options_page": "options.html",
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://dribbble.com/*"
			],
			"js": [
				"js/helpers.js",
				"js/dribblehd.js"
			],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"css/dribbblehd.css",
		"img/loading.gif",
		"img/dribbble_check.png"
	]
}